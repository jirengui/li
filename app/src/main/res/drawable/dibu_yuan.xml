<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape >
            <!-- 通过pading指定边线有无和宽度 -->
            <padding
                android:top="2dp"
                />
            <solid
                android:color="#d9d9d9"
                />
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                />
        </shape>
    </item>

    <!-- 主体 -->
    <item>
        <shape >
            <solid
                android:color="#ffffff"
                />
            <corners android:topLeftRadius="30dp"
                android:topRightRadius="30dp"
                />
        </shape>
    </item>
</layer-list>