<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/denglubeijing"
    android:gravity="center_horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/login_touxiang"
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:src="@drawable/a1"
        />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="290dp"
        android:layout_height="41dp"
        android:background="@drawable/tv_denglu"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="账号"
            android:textSize="16dp"
            />
    <EditText
        android:layout_marginRight="5dp"
        android:id="@+id/ed_zhanghao"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="290dp"
        android:layout_height="41dp"
        android:background="@drawable/tv_denglu"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="密码"
            android:textSize="16dp"
            />
    <EditText
        android:paddingLeft="15dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:id="@+id/ed_mima"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        />
    </LinearLayout>


    <Button
        android:id="@+id/bt_denglu"
        android:layout_width="290dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/ed_mima"
        android:layout_below="@+id/ed_mima"
        android:layout_marginTop="20dp"
        android:background="@drawable/ed_denglu"
        android:text="@string/denglu"
        android:textSize="20dp"
        android:textColor="#3DCEBA" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_zhuce"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/zhuce"
            android:textSize="18dp"
            android:textColor="@color/chunbai"
            android:gravity="center"/>

        <TextView
            android:textSize="18dp"
            android:id="@+id/tv_wangjimima"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/wangjimima"
            android:textColor="@color/chunbai" />
    </LinearLayout>

</LinearLayout>
