<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6FFFD"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_chengyuan_touxiang"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/touxiang"/>
    <TextView
        android:id="@+id/item_chengyuan_mingcheng"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/zhandui"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/item_chengyuan_zhiwu"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="队长"
        android:textSize="16dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"/>
</LinearLayout>
