<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.amap.api.maps.MapView
        android:id="@+id/jianzhuwu_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.amap.api.maps.MapView>
    <RelativeLayout
        android:background="@color/biaoti"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/jianzhuwu_fanhui"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/fanhui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/xuanzejianzhuwu"
            android:textSize="18dp"
            android:textColor="@color/chunbai"
            />
    </RelativeLayout>
    <TextView
        android:background="@color/chunbai"
        android:layout_above="@+id/jianzhuwu_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qingdianjijianzhuwu"
        android:textSize="16dp"
        android:padding="@dimen/album_dp_10"
        android:textColor="@color/black"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/jianzhuwu_rc"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
