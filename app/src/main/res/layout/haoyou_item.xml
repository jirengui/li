<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/haoyou_touxiang"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@drawable/action" />

    <TextView
        android:id="@+id/haoyou_mingcheng"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/haoyou_touxiang"
        android:gravity="center"
        android:text="@string/xingbie"
        android:textSize="16dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/tv_jianjie"
        android:layout_below="@+id/haoyou_mingcheng"
        android:layout_toRightOf="@+id/haoyou_touxiang"
        android:text="@string/xingbie"
        />

    <include
        layout="@layout/includeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

</RelativeLayout>
