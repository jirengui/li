<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/yemianbeijin"
   >

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/jihua_item_riqi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#101010"
            android:text="8月13日  周一"
            android:textSize="18dp"/>
        <com.mcxtzhang.swipemenulib.SwipeMenuLayout
            android:layout_below="@+id/jihua_item_riqi"
            android:id="@+id/swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="5dp"
            app:ios="false"
            app:leftSwipe="true"
            app:swipeEnable="true">
        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_item_yundongtubiao"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="fitXY"
                android:src="@drawable/paobulv"
                />
            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_item_yundongtubiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
            <TextView
                android:id="@+id/jihua_item_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/biaoti"
                android:text="08:00" />

            <TextView
                android:layout_below="@+id/jihua_item_starttime"
                android:id="@+id/jihua_item_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/biaoti"
                android:text="08:30" />


            <TextView
                android:id="@+id/jihua_item_yundong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@+id/jihua_item_starttime"
                android:layout_marginLeft="20dp"
                android:textColor="#101010"
                android:textSize="20dp"
                android:text="跑步20分钟" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/jihua_yiwancheng"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/yiwancheng"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible" />
        </RelativeLayout>
            <Button
                android:id="@+id/btnTop"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/biaoti"
                android:text="修改"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnshanchu"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="#d9dee4"
                android:text="@string/shanchu"
                android:textColor="@android:color/white" />
        </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</RelativeLayout>
