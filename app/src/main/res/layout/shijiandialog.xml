<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/shijian_chushi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2018年8月18日 22：00"
        android:textColor="#101010"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.pl.wheelview.WheelView
            android:id="@+id/riqi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:isCyclic="true"
            app:itemNumber="5"
            app:normalTextSize="18dp"
            app:selectedTextColor="@color/biaoti"
            app:selectedTextSize="20dp" />

        <com.pl.wheelview.WheelView
            android:id="@+id/xiaoshi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:isCyclic="true"
            app:itemNumber="5"
            app:normalTextSize="18dp"
            app:selectedTextColor="@color/biaoti"
            app:selectedTextSize="20dp" />

        <com.pl.wheelview.WheelView
            android:id="@+id/fenzhong"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:isCyclic="true"
            app:itemNumber="5"
            app:normalTextSize="18dp"
            app:selectedTextColor="@color/biaoti"
            app:selectedTextSize="20dp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/xian"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/shijian_queding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#101010"
            android:padding="10dp"
            android:text="确定"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/xian"/>
        <TextView
            android:id="@+id/shijian_quxiao"
            android:textSize="18dp"
            android:textColor="#101010"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>
