<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E6FFFD"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_huodong_touxiang"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/touxiang"/>
    <TextView
        android:paddingRight="@dimen/album_dp_10"
        android:id="@+id/item_huodng_mingcheng"
        android:layout_marginLeft="@dimen/album_dp_10"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/zhandui"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:maxLines="1"
        />
    <Button
        android:id="@+id/item_huodng_jiaru"
        android:layout_gravity="center_vertical"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@color/biaoti"
        android:layout_marginRight="10dp"
        android:text="加入"/>
</LinearLayout>
