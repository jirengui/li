<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yemianbeijin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/biaoti"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/xunlian_fanhui"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="训练"
            android:textColor="@color/chunbai"
            android:textSize="18dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/xunlian_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/album_dp_10"
        android:text="跑步30分钟"
        android:textColor="#101010"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#FF9800" />

            <TextView
                android:id="@+id/xunlian_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="用时" />

            <TextView
                android:id="@+id/xunlian_yongshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xunlian_1"
                android:layout_marginLeft="10dp"
                android:text="00:00"
                android:textColor="#101010"
                android:textSize="16dp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="#FF9800" />

            <TextView
                android:id="@+id/xunlian_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="目标用时" />

            <TextView
                android:id="@+id/xunlian_mubiaoyongshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/xunlian_2"
                android:layout_marginRight="12dp"
                android:text="00:05"
                android:textColor="#101010"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/huanyuanquan">

            <TextView
                android:id="@+id/xunlian_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="跑步"
                android:textColor="#101010"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/xunlian_dashijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="00:30:00"
                android:textColor="#101010"
                android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/xunlian_zanting"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/biankuanghei"
            android:gravity="center"
            android:padding="10dp"
            android:text="暂停"
            android:textColor="#101010"
            android:layout_marginBottom="20dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/xunlian_kaishi"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:textColor="#FF9800"
            android:textSize="20dp"
            android:text="开 始 训 练"
            />
    </RelativeLayout>
</LinearLayout>
