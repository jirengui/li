<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/item_guiji_nian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444343"
        android:text="2018年6月"/>
        <TextView
            android:id="@+id/item_guiji_zongji"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:text="共计1.5公里"
            android:textColor="#101010"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_guiji">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_guiji_ri"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="11日"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chunbai"
            android:textSize="15dp"
            android:text="跑步里程："/>
        <TextView
            android:layout_toEndOf="@+id/p1"
            android:layout_marginTop="30dp"
            android:id="@+id/item_guiji_paobulicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chunbai"
            android:textSize="15dp"
            android:text="1.01公里"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/p1"
            android:layout_marginLeft="50dp"
            android:id="@+id/p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chunbai"
            android:textSize="15dp"
            android:text="跑步用时："/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_below="@+id/p1"
            android:layout_toEndOf="@+id/p2"
            android:id="@+id/item_guiji_paobuyongshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chunbai"
            android:textSize="15dp"
            android:text="00:10:00"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@color/chunbai"
            android:textColor="@color/biaoti"
            android:gravity="center"
            android:textSize="15dp"
            android:text="打卡成功"/>
    </RelativeLayout>
</LinearLayout>
